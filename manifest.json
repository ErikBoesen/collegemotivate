{
    "manifest_version": 2,
    "name": "CollegeMotivate",
    "version": "0.1.0",

    "description": "Display a motivating video when you visit distracting websites!",
    "icons": {
        "128": "icons/128.png"
    },
    "permissions": [
        "storage",
        "tabs"
    ],
    "options_page": "options.html",
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "content_scripts": [{
        "matches": ["*://*/*"],
        "css": [],
        "js": ["script.js"]
    }],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "icons/128.png"
    }
}
